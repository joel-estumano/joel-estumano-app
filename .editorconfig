# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf  # Garante que todos os arquivos usem LF

[*.ts]
# Removido quote_type (n√£o suportado pelo EditorConfig)
# Aspas simples devem ser configuradas no Prettier

[*.md]
max_line_length = off
trim_trailing_whitespace = false
